{
  "name": "overdrive",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter backend --filter frontend --parallel run dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "test": "pnpm --filter backend test",
    "verify": "pnpm --filter backend verify",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "deploy": "pnpm run deploy:backend && pnpm run deploy:frontend",
    "deploy:backend": "pnpm --filter backend run deploy",
    "deploy:frontend": "pnpm --filter frontend build && npx wrangler pages deploy packages/frontend/dist --project-name=overdrive"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.4"
  }
}
